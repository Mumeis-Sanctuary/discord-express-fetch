{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2021",
		"lib": [
			"es2021",
			"esnext"
		],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"./node_modules/@types",
		],
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules"
	]
}